{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@sales-agent/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@sales-agent/db": [
        "../../packages/db/src"
      ],
      "@sales-agent/db/*": [
        "../../packages/db/src/*"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
